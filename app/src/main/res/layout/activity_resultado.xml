<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoActivity"
    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seu indice de massa corporal é :"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/text_view_peso"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
               android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:text="25.0"
                android:textColor="@color/colorSecundaryLight"
                android:background="@drawable/botao_peso"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ideal"
                android:background="@color/colorSecundaryLight"


                />


            <TextView
                android:id="@+id/status_imc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textSize="32sp"
                android:textAlignment="center"
                android:paddingTop="15dp"


                />


            <TextView
                android:id="@+id/status_nivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nível de Risco : Médio"
                android:textSize="24sp"
                android:textAlignment="center"
                android:paddingTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kkkkkkkkkkkkkkkkkkkkkkhbdddddhdddddddddddddddddddddddd"
                android:textSize="18sp"
                android:textAlignment="center"
                android:paddingTop="8dp"

                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>